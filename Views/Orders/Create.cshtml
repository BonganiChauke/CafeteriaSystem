@model IEnumerable<CafeteriaSystem.Models.Restaurant>

@{
    ViewData["Title"] = "Place Order - Select Restaurant";
}

<h1>Select a Restaurant</h1>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Contact Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.LocationDescription)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                <td>
                    <a asp-action="Order" asp-route-restaurantId="@item.Id" class="btn btn-primary">View Menu</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
</p>