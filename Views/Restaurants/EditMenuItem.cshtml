@model CafeteriaSystem.Models.MenuItem

@{
    ViewData["Title"] = "Edit Menu";
}

<h4>Edit Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMenuItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden input to send RestaurantId back to server -->
            <input type="hidden" asp-for="RestaurantId" />

            <!-- Display RestaurantId or restaurant name as read-only -->
            <div class="form-group">
                <label class="control-label">Restaurant ID</label>
                <input class="form-control" value="@Model.RestaurantId" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewMenuItems" asp-route-id="@Model.RestaurantId" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
